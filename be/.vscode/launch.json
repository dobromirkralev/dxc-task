{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug: dev (ts-node + nodemon)",
      "runtimeExecutable": "nodemon",
      "runtimeArgs": [
        "--watch", "src",
        "--exec", "ts-node",
        "src/app.ts"
      ],
      "restart": true,
      "cwd": "${workspaceFolder}/consultpro-node",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": [
        "<node_internals>/**"
      ]
    }
  ]
}